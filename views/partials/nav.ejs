  <% if (!user) { %>
    <script defer src="https://accounts.google.com/gsi/client"></script>
  <% } %>
</head>
<body>
  <nav>
    <% if (user) { %>
      <ul class="menu">
        <li class="dropdown">
          <i class="fas fa-solid fa-bars"></i>
          <div class="dropdown-content">
            <a href="/accounts">All Accounts</a>
            <a href="/accounts/new">New Account</a>
          </div>
        </li>
      </ul>
      <img id="avatar" src="<%= user.profile.avatar %>"/>
      <p>Logged in as <%= user.profile.name %></p>
      <a href="/auth/logout" class="right">
        <button type="submit">Logout</button>
      </a>
      <% } else { %>
      <div 
        id="g_id_onload"
        data-client_id="<%= googleClientID %>"
        data-login_uri="/auth/google"
        data-auto_prompt="false"
        data-prompt_parent_id="g_id_onload"
      ></div>
      <div 
        class="g_id_signin right"
        data-type="standard"
        data-size="large"
        data-theme="outline"
        data-text="sign_in_with"
        data-shape="rectangular"
        data-logo_alignment="left"
      ></div>
    <% } %>
  </nav>
