<%- include('./partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/accounts/index.css">
<%- include('./partials/nav') %>

<div id="landing">
  <h2>Hello <%= user ? user.profile.name : "friends" %></h1>
    <% if (user?.profile.avatar) { %>
      <div id="logged">

        <h1 class="animate__animated animate__fadeInDownBig">Welcome to Resfolio</h1>
        <img id="avatar" src="/assets/img/rflogo.png" alt="Resfolio Logo">
        <br>
        
        <h2>Where employers find you. Where you find growth.</h2>
        <h2>Create your Account in seconds. Showcase your skills to the world.</h2>
        <h2>Take control of your career path. Resfolio is your key to success.</h2>
        <h2>Break down towering walls with determination.</h2>

      </div>
    <% } %>
  <% if (!user) { %>
    <div id="not-logged">

      <h1 class="animate__animated animate__fadeInUpBig">Welcome to Resfolio</h1>
      <img id="avatar" src="/assets/img/rflogo.png" alt="Resfolio logo">
  
      <h3>Empower your career with Resfolio. Craft standout resumes and portfolios effortlessly.</h3>
  
      <div id="features">
        <h2>Features</h2>
        <h3>Manage multiple accounts. Showcase your skills seamlessly.</h3>
        <h3>Keep your data secure. Accessible anytime, anywhere.</h3>
      </div>
  
      <div id="why-choose">
        <h2>Why Choose Resfolio?</h2>
        <h3>Save time. Impress employers. Adapt to your needs. Join a supportive community.</h3>
      </div>

    </div>
  <% } %>
</div>

<%- include('./partials/footer') %>
