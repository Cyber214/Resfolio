<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/accounts/index.css">
<%- include('../partials/nav') %>

<main>
  <h1>Account List</h1>
  <% accounts.forEach(account => { %>
    <div class="account-container">
      <div><img id="avatar" src="<%= account.author.avatar %>" alt=""></div>
      <div class="account-info">Email: <%= user.email %></div>
      <div class="account-info">Phone Number: <%= account.phoneNo %></div>
      <div class="account-info">Date of Birth: <%= account.dateOfBirth.toLocaleDateString() %></div>
      <div class="account-info">Languages: <%= account.languages.join(', ') %></div>
      <div class="account-actions">
        <a href="/accounts/<%= account._id %>"><button>View</button></a>
        <a href="/accounts/<%= account._id %>/edit"><button>Edit</button></a>
        <form action="/accounts/<%= account._id %>/delete" method="POST">
          <button type="submit">Delete</button>
        </form>
      </div>
    </div>
  <% }) %>
</main>


<%- include('../partials/footer') %>