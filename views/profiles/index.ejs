<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>

  <h1>Profile</h1>
  <p>Name: <%= profile.name %></p>
  <p>Email: <%= profile.email %></p>
  <p>Avatar URL: <%= profile.avatar %></p>
  <p>Address: <%= profile.address %></p>
  <p>Phone: <%= profile.phone %></p>

  <form action="/profiles" method="POST">
    <label for="name">Name of Institution:</label>
    <input type="text" id="name" name="name" required>
    <br><br>
    <label for="degree">Degree:</label>
    <select id="degree" name="degree" required>
      <option value="BSc">BS</option>
      <option value="BEng">BEng</option>
      <option value="LLB">LLB</option>
      <option value="BSW">BSW</option>
      <option value="BBA">BBA</option>
    </select>
    <br><br>
    <label for="state">State:</label>
    <input type="text" id="state" name="state">
    <br><br>
    <label for="country">Country:</label>
    <input type="text" id="country" name="country">
    <br><br>
    <label for="completed">Completed:</label>
    <input type="checkbox" id="completed" name="completed">
    <br><br>
    <label for="startYear">Start Year:</label>
    <input type="number" id="startYear" name="startYear" value="<%= new Date().getFullYear() %>" required>
    <br><br>
    <div id="endYearField" style="display: none;">
      <label for="endYear">End Year:</label>
      <input type="number" id="endYear" name="endYear">
    </div>
    <br><br>
    <button type="submit">Submit</button>
  </form> 

</main>

<%- include('../partials/footer') %>